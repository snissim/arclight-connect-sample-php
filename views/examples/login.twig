{% endblock %}
{% block content %}
    <ol class="breadcrumb">
        <li><a href="/">Home</a></li>
    </ol>
    <div class="container">
        <h1>{{ Header }}</h1>
        <div class="well">
            <form class="formentry" name="submitFrm" role="form" action="/login" method="post">
                <div class="form-group">
                    <label for="Password">Password</label>
                    <input type="password" required="required" class="form-control" name="Password" value="{{ Password }}" >
                </div>
                <div class="form-group">
                    <label for="UserName">Username</label>
                    <input type="texts" required="required" class="form-control" name="UserName" value="{{ UserName }}" >
                </div>

                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
    </div>
{% endblock %}