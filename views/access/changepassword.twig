{% extends "./layout.twig" %}
{% block title %}{{ title }}{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block content %}
    <ol class="breadcrumb">
        <li><a href="/">Home</a></li>
        <li><a href="/access">Access Control Services</a></li>
    </ol>
    <div class="container">
        <h1>{{ Header }}</h1>
        <div class="well">
            <form class="formentry" role="form" action="/access/changePassword" method="post">
                <div class="form-group">
                    <label for="NewPassword">New Password</label>
                    <input type="password" class="form-control" name="NewPassword" value="{{ NewPassword }}" >
                </div>
                <div class="form-group">
                    <label for="OldPassword">Old Password</label>
                    <input type="password" class="form-control" name="OldPassword" value="{{ OldPassword }}" >
                </div>

                <div class="form-group">
                    <label for="UserName">Username</label>
                    <input type="text" class="form-control" name="UserName" value="{{ UserName }}" >
                </div>

                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
    </div>
{% endblock %}