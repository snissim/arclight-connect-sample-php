{% extends "./layout.twig" %}
{% block title %}{{ title }}{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block content %}
    <ol class="breadcrumb">
        <li><a href="/">Home</a></li>
        <li><a href="/access">Access Control Services</a></li>
    </ol>
    <div class="container">
        <h1>{{ Header }}</h1>
        <div class="well">
            <form class="formentry" role="form" action="/access/setcredentials" method="post">
                <div class="form-group">
                    <label for="MarketCode">Market Code</label>
                    <input type="text" class="form-control" name="MarketCode" value="{{ MarketCode }}">
                </div>
                <div class="form-group">
                    <label for="Password">Password</label>
                    <input type="password" class="form-control" name="Password" value="{{ Password }}" >
                </div>
                <div class="form-group">
                    <label for="ConsumerId">Consumer Id</label>
                    <input type="text" class="form-control" name="ConsumerId" value="{{ ConsumerId }}" >
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
    </div>
{% endblock %}