{% extends "./layout.twig" %}
{% block title %}{{ title }}{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block content %}
    <ol class="breadcrumb">
        <li><a href="/">Home</a></li>
        <li><a href="/access">Access Control Services</a></li>
    </ol>
    <div class="container">
        <h1>{{ Header }}</h1>
        <div class="well">
            <form class="formentry" role="form" action="/access/sendPasswordResetLink" method="post">
                <div class="form-group">
                    <label for="MarketCode">Market Code</label>
                    <input type="text" class="form-control" name="MarketCode" value="{{ MarketCode }}">
                </div>
                <div class="form-group">
                    <label for="Url">Url</label>
                    <input type="text" class="form-control" name="Url" value="{{ Url }}" >
                </div>

                <div class="form-group">
                    <label for="UserName">Username</label>
                    <input type="text" class="form-control" name="UserName" value="{{ UserName }}" >
                </div>

                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
    </div>
{% endblock %}