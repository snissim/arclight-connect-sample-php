{% extends "./layout.twig" %}
{% block title %}{{ title }}{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block content %}
    <ol class="breadcrumb">
        <li><a href="/">Home</a></li>
        <li><a href="/consumer">Consumer Services</a></li>
    </ol>
    <div class="container">
        <h1>{{ Header }}</h1>
        <div class="well">
            <form class="formentry" role="form" action="/consumer/submitResponseAndCalculateBeFirstReady" method="post">
                <div class="form-group">
                    <label for="MarketCode">Market Code</label>
                    <input type="text" class="form-control" name="MarketCode" value="{{ MarketCode }}">
                </div>
                <div class="form-group">
                    <label for="LayoutName">Layout Name</label>
                    <input type="text" class="form-control" name="LayoutName" value="{{ LayoutName }}" >
                </div>

                <div class="form-group">
                    <label for="EndDate">Response Attributes</label>
                    <input type="text" class="form-control" name="ResponseAttributes" placeholder="Example: key1=val1:key2=val2:key3=val3" value="{{ ResponseAttributes }}" >
                </div>

                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
    </div>
{% endblock %}